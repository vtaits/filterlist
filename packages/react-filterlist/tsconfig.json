{
  "compilerOptions": {
    "target": "es2023",
    "outDir": "dist/ts",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": "../.."
  },
  "include": [
    "__stories__/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
