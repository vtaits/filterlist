{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/ts",
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "noEmit": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
