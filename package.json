{
  "name": "filterlist-root",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/vtaits/filterlist.git"
  },
  "author": "Vadim Taits <taizvadim@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "storybook dev -p 6006",
    "build": "bun --filter='*' run build",
    "test:ts": "bun --filter='*' run test:ts",
    "lint": "bun --filter='*' run lint",
    "lint:fix": "biome check examples --write --unsafe && bun --filter='*' run lint:fix",
    "format": "biome format --write examples && bun --filter='*' run format",
    "test:unit": "bun --filter='*' run test:unit",
    "test": "bun run lint && bun run test:ts && bun run test:unit",
    "validate": "bun run format && bun run build && bun run test",
    "upload:docs": "gh-pages -d docs",
    "build:docs": "typedoc ./docs-entry.ts",
    "start:docs": "serve ./docs",
    "deploy:docs": "bun run build:docs && bun run upload:docs",
    "prepare": "husky install"
  },
  "devDependencies": {
    "98.css": "^0.1.20",
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^9.3.0",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/builder-vite": "^8.4.7",
    "@storybook/manager-api": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/testing-library": "^0.2.2",
    "@types/gh-pages": "^6.1.0",
    "@types/react": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vtaits/react-paginator": "^2.0.0",
    "@vtaits/react-router-dom-fake-browser": "^1.0.0",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-is": "^19.0.0",
    "serve": "^14.2.4",
    "storybook": "^8.4.7",
    "styled-components": "^6.1.14",
    "typedoc": "^0.27.6",
    "typescript": "5.7.2",
    "vite": "^6.0.7",
    "@types/bun": "latest"
  }
}
