{
  "env": {
    "browser": true,
    "jest/globals": true,
    "es6": true
  },

  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],

  "plugins": [
    "jest"
  ],

  "parser": "babel-eslint",

  "parserOptions": {
    "sourceType": "module"
  },

  "rules": {
    "arrow-parens": ["error", "always"],
    "import/prefer-default-export": "off",
    "no-plusplus": "off"
  }
}
